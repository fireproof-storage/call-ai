{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM"],
    "module": "nodenext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
} 
